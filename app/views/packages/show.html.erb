<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Package #<%= @package.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Resident apt</dt>
              <dd><%= @package.resident.apt %></dd>

              <dt>Resident name</dt>
              <dd><a href="/residents/<%= @package.resident.id %>"><%= @package.resident.name %></a></dd>

              <dt>Photo</dt>
              <dd><img src="<%= @package.resident.photo %>" height="150" width="100"></dd>

              <dt>Carrier</dt>
              <dd><%= @package.carrier %></dd>

              <dt>Location</dt>
              <dd><%= @package.location %></dd>

              <dt>Pickup</dt>
              <dd><%= @package.pickup %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/packages" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/packages/<%= @package.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_package/<%= @package.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
